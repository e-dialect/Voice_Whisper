# 执行数据处理脚本
python scripts/prepare_dialect_data.py \
  --input /home/chihan/workspace/SenseVoice/data/KeSpeech_Southwestern/Southwestern_transcriptions.txt \
  --output_dir /home/chihan/workspace/SenseVoice/data/KeSpeech_Southwestern \
  --audio_dir /home/chihan/workspace/SenseVoice/data/KeSpeech_Southwestern/audio \
  --language zh \
  --test_size 0.1 \
  --emo_label "<|NEUTRAL|>" \
  --verify


